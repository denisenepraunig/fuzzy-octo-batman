<mvc:View
	xmlns:mvc="sap.ui.core.mvc"
	controllerName="sapui5.demo.odata.readingdata.bestpractice.controller.Master"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
	<Page
		id="productInfo"
		title="Product {ProductID} Info"
		binding="{/Products(1)}">
		<content>
			<Panel>
				<Text 
					text="Product Info: {ProductName}, {QuantityPerUnit}">
				</Text>
				<f:SimpleForm>
					<core:Title 
						text="Product Information" />
					<Label text="Product Name"/>
					<Input 
						maxLength="40"
						value="{ProductName}"
						valueLiveUpdate="true"/>
					<Label 
						text="Quantity per Unit"/>
					<Input 
						maxLength="20"
						value="{QuantityPerUnit}"
						valueLiveUpdate="true"/>
				</f:SimpleForm>
			</Panel>
		</content>
		<footer>
			<Bar>
				<contentRight>
                    <Button
                        icon="sap-icon://undo" 
                        press="onReset" 
                        text="Reset Changes"/>
                    <Button
                        icon="sap-icon://display" 
                        type="Accept" 
                        press="onCheck" 
                        text="Check changes"/>
                </contentRight>
			</Bar>
		</footer>
	</Page>
</mvc:View>